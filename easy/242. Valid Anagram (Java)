class Solution {
    public boolean isAnagram(String s, String t) {
        char[] x = "abcdefghijklmnopqrstuvwxyz".toCharArray();
        int[] a1 = new int[26];
        int[] a2 = new int[26];
 
        if (s.length()!=t.length()) return false;

        for (int i = 0; i < s.length(); i++) {
            for (int j = 0; j < 26; j++) {
                if (s.charAt(i) == x[j]) {
                    a1[j]++;
                }
            }

            for (int j = 0; j < 26; j++) {
                if (t.charAt(i) == x[j]) {
                    a2[j]++;
                }
            }
        }
        for (int i = 0; i < 26; i++) {
            if (a1[i] != a2[i]) {
                return false;
            }
        }

        return true;
    }
}
