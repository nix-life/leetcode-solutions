class Solution(object):
    def shuffle(self, nums, n):
        """
        :type nums: List[int]
        :type n: int
        :rtype: List[int]
        """
        l1 = nums[:n]
        l2 = nums[n:]

        new_list = []

        for i in range(n):
            new_list.append(l1[i])
            new_list.append(l2[i])

        return new_list
